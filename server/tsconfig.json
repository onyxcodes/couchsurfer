{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "module": "NodeNext",
    "outDir": "./lib",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}